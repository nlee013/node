<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,height=device-height,initial-scale=1">
<title>채팅 Client - 2</title>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script type="text/javascript" src="https://cdn.socket.io/4.0.1/socket.io.js"></script>

<script type="text/javascript">

var host;
var port;
var socket;

//ajax.jquery
$(function() {
	
	$("#connectBtn").bind("click", function(event) {
	
		printMsg("connectBtn이 클릭 되었습니다.");
		
		///사용자가 입력한 호스트
		host = $("#host").val();
		port = $("#port").val();
		
		connectToServer();
		
	});
	
	//클라이언트가 서버에게 먼저 보낼 때 (emit사용)

	$("#sendBtn").bind("click", function(event){
		
		var sender = $("#senderId").val();
		var receiver = $("#receiverId").val();
		var msg = $("#msg").val();
		
		//주소
		//message event 객체의 format(형식)은 사용자 정의
		//sender:보내는 사람, receiver: 받는 사람이라고 정의 하고
		//command : 데이터의 종류를 구별할 때 사용
		//type:전송 될 데이터의 형태
		//data:데이터
		
		var output = {sender : sender, receiver:receiver, command:"chat", type:"text", data:msg}
		
		if(socket == undefined){
			
			alert("Server에 연결되어 있지 않습니다.");
			return;
			
		}
		
		socket.emit("message", output);
		
	});
	
});

//서버에 연결하는 함수
function connectToServer() {
	
	var options = {"forceNew" : true};//연결 세션을 생성
	var url = "http://" + host + ":" + port;
	
	socket = io.connect(url, options);
	
	socket.on("connect", function(){
		
		printMsg("웹 소켓 서버에 연결 되었습니다 : " + url);
		
		socket.on("message", function(message) {
			
			printMsg("수신 메세지: " + message.sender + ", " + message.receiver + ","
									+ message.command + "," + message.data);
		});
	});
	
	socket.on("disconnect", function(){
		
		printMsg("웹 소켓 서버 연결이 종료 되었습니다 : " + url);
	});
	
}

//함수 만들기
function printMsg(msg) {
	
	//result에 메세지 출력하도록
	$("#result").append("<p>" + msg + "</p>");
}

</script>
</head>
<body>

<h3>채팅 클라이언트 2</h3>
<br/>

<div>
	<input type="text" id="host" value="localhost"/>
	<input type="text" id="port" value="3000"/>
	
	<input type="button" id="connectBtn" value="연결하기"/>
</div>
<br/>

<div>
	<div>
		<span>보내는 사람 아이디</span>
		<input type="text" id="senderId"/>
	</div>
	
	<div>
		<span>받는 사람 아이디</span>
		<input type="text" id="receiverId" value="ALL"/>
	</div>
	
	<div>
		<span>메세지 Data</span>
		<input type="text" id="msg" placeholder="내용을 입력하세요."/>
	</div>
	<br/>
	
	<input type="button" id="sendBtn" value="전송"/>
</div>

<hr/>
<p>결과: </p>

