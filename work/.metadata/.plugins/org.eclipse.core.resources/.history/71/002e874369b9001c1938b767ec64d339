<link rel="stylesheet" type="text/css" href="./data/semantic.min.css"/>
<link rel="stylesheet" type="text/css" href="./data/chatClient.css"/>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script type="text/javascript" src="https://cdn.socket.io/4.0.1/socket.io.js"></script>

<script type="text/javascript">

var host;
var port;
var socket;

//ajax.jquery
$(function() {
	
	$("#connectBtn").bind("click", function(event) {
	
		printMsg("connectBtn이 클릭 되었습니다.");
		
		///사용자가 입력한 호스트
		host = $("#host").val();
		port = $("#port").val();
		
		connectToServer();
		
	});
	
	//클라이언트가 서버에게 먼저 보낼 때 (emit사용)

	$("#sendBtn").bind("click", function(event){
		
		var sender = $("#senderId").val();
		var receiver = $("#receiverId").val();
		var msg = $("#msg").val();
		
		//주소
		//message event 객체의 format(형식)은 사용자 정의
		//sender:보내는 사람, receiver: 받는 사람이라고 정의 하고
		//command : 데이터의 종류를 구별할 때 사용
		//type:전송 될 데이터의 형태
		//data:데이터
		
		var output = {sender : sender, receiver:receiver, command:"chat", type:"text", data:msg}
		
		if(socket == undefined){
			
			alert("Server에 연결되어 있지 않습니다.");
			return;
			
		}
		
		socket.emit("message", output);
		
		$("#msg").val("");
		$("#msg").val();
		
	});
	
	//함수
	$("#loginBtn").bind("click", function(event) {
		
		var id = $("#id").val();
		var pwd = $("#pwd").val();
		var alias = $("#alias").val();
		var today = $("#today").val();
		
		$("#senderId").val(id);
		
		//서버로 보낼 data
		var output = {id:id, pwd:pwd, alias:alias, today:today};
		
		if(socket == undefined){
			
			alert("서버에 연결 되어있지 않습니다.");
			return;
		}
		
		socket.emit("login", output);
	});
	
	
	$("#logoutBtn").bind("click", function(event) {
		
		
		if(socket == undefined){
			
			alert("서버에 연결 되어있지 않습니다.");
			return;
		}
		
		var id = $("#id").val();
		
		//서버로 보낼 data
		var output = {id:id};
		
		var id = $("#id").val();
		var pwd = $("#pwd").val();
		var alias = $("#alias").val();
		var today = $("#today").val();
		
		socket.emit("logout", output);
	});
	
});

//서버에 연결하는 함수
function connectToServer() {
	
	var options = {"forceNew" : true};//연결 세션을 생성
	var url = "http://" + host + ":" + port;
	
	socket = io.connect(url, options);
	
	socket.on("connect", function(){
		
		printMsg("웹 소켓 서버에 연결 되었습니다 : " + url);
		
		socket.on("message", function(message) {
			
			
			
		});
	});
	
	socket.on("response", function(response){
		
		printMsg("응답 메세지 : " + response.command + ", " + response.code + "," + response.message);
		
		//logout
		if(response.code == 444){
			
			socket.close();
		}
	});
	
	socket.on("disconnect", function(response){
		
		printMsg("웹 소켓 서버 연결이 종료 되었습니다 : " + url);
	});
	
}

//함수 만들기
function printMsg(msg) {
	
	//result에 메세지 출력하도록
	$("#result").append("<p>" + msg + "</p>");
}

function showClock(data) {
	
}

function addToDiscussion(writer, msg) {
	
}
</script>
